#define SETUP_STANDARD_DIALOG_W	339
#define SETUP_STANDARD_DIALOG_H	179
#define SETUP_MEDIUM_DIALOG_W		277
#define SETUP_MEDIUM_DIALOG_H		137
#define SETUP_SMALL_DIALOG_W		215
